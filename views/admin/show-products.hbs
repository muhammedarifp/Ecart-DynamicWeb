<section>
  <div class="container">
    <div class="row">
      <a id="Pro-add-btn" href="admin/add-product" class="btn btn-outline-primary m-3 mt-3 mr-auto" >Add product</a>
    </div>
    
  </div>
    <div class="container">
        <table class="table mt-5" id="Admin-product-view">
  <thead>
    <tr>
      <th scope="col">NAME</th>
      <th>Catogary</th>
      <th scope="col">DISCRIP</th>
      <th scope="col">PRICE</th>
      <th scope="col">IMG</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each product}}
    <tr>
      <td>{{this.Name}}</td>
      <td>{{this.Catogary}}</td>
      <td>{{this.Discription}}</td>
      <td>{{this.Price}}</td>
      <td><img src="/Pro-imgs/{{this._id}}.jpg" style="height: 50px; width: 50px;"></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-info">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.Name}} product')">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>

<script>
  $(document).ready( function () {
    $('#Admin-product-view').DataTable();
} );
</script>